#!/usr/bin/env node

var cli = require('../lib/cli')

var command = process.argv[2]
var args = process.argv.slice(3)

if (cli[command]) {
    cli[command].call(cli, args, function(err) {
        if (err) {
            if (err.code === 'ENOENT') {
                console.error('post lookup failed')
            }
            else {
                console.error('unrecognized error:')
                console.error(err)
            }
        }
    })
}
else {
    console.error('unknown command')
}
// TODO else give usage
